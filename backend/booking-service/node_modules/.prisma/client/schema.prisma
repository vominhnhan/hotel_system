generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Quản lý đặt phòng
model Booking {
  id             String        @id @default(uuid())
  customerId     String
  checkIn        DateTime
  checkOut       DateTime
  numberOfGuests Int
  status         BookingStatus
  totalAmount    Float
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  bookingRooms   BookingRoom[] @relation("BookingToBookingRoom")

  @@index([customerId])
  @@index([checkIn, checkOut])
}

// Quản lý mối quan hệ đặt phòng và phòng
model BookingRoom {
  id        String   @id @default(uuid())
  bookingId String
  roomId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  booking   Booking  @relation("BookingToBookingRoom", fields: [bookingId], references: [id], onDelete: Cascade)

  @@unique([bookingId, roomId])
  @@index([roomId])
}

// Enum cho trạng thái đặt phòng
enum BookingStatus {
  PENDING // Đặt mới
  CONFIRMED // Đã xác nhận
  CHECKED_IN // Đã nhận phòng
  CHECKED_OUT // Đã trả phòng
  CANCELLED // Đã huỷ
}
